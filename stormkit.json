{
  "name": "gdz-navigator-bot",
  "description": "Telegram бот для ГДЗ 7-9 классы",
  "region": "europe-west1",
  "type": "nodejs",
  "build": {
    "command": "pip install -r requirements.txt",
    "output": "."
  },
  "environment": {
    "BOT_TOKEN": {
      "description": "Токен Telegram бота от @BotFather",
      "required": true,
      "secret": true
    },
    "WEB_APP_URL": {
      "description": "URL вашего Mini App",
      "value": "https://razetka2010.github.io/gdz-navigator/",
      "required": true
    },
    "PORT": {
      "description": "Порт для Flask",
      "value": "8080"
    }
  },
  "scaling": {
    "min": 1,
    "max": 1,
    "cpu": 256,
    "memory": 512
  },
  "health": {
    "path": "/health",
    "interval": 30
  }
}
